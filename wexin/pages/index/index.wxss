page {
    height:100%;
}

.home-box {
    background-color: #f9f9f9;
    width: 100%;
    height: 100%;
}

.home-box-scroll {
    background-color: #f9f9f9; 
}

.slideshow {
    display: flex;
    flex-direction: column;
    align-items: center; 
    height: 200rpx;
}

.slideshow-img {
    width: 100%;
    height: 100%;
}

.category-list {
    display: flex;
    white-space: nowrap;
    background-color: #fff;
    padding-left: 20rpx;
    border-bottom: 1px #f8f8f8 solid;
}

.category-item {
    display: inline-block;
    margin-right: 30rpx;
    font-size: 40rpx;
    line-height: 100rpx;
}

.product-list {
    margin-top: 30rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
}

.product-item {
    display: flex; 
    flex-basis: calc(50% - 10rpx);  
    justify-content: flex-start;
    flex-direction: column;
    margin-bottom: 20rpx;
    padding-bottom: 20rpx;
}

.product-image-box {
    height: 300rpx;
    background-color: #fff;
}

.product-image {
    width: 100%;
    height:100%;
}

.product-name {
    padding-left: 20rpx;
    line-height: 40rpx;
    margin-bottom: 20rpx;
    color: #666;
    font-size: 32rpx;
    margin-top: 16rpx;
}

.product-price {
    padding-left: 20rpx;
    color: #e4393c;
    line-height: 40rpx;
    font-size: 32rpx;
}